{% extends "AppBundle::admin.html.twig" %}

{% block styles %}
<link rel="stylesheet" href="{{ asset('css/circle.css') }}">
{% endblock %}

{% set status_label_class = {
  'CREATED': 'label-default',
  'CANCELED': 'label-default',
  'WAITING': 'label-danger',
  'ACCEPTED': 'label-primary',
  'PICKED': 'label-info',
  'DELIVERED': 'label-success'
} %}

{% block body %}

{% set total = waiting_count + accepted_count + picked_count %}

<div class="row">
  <div class="col-md-4">
    <p class="text-center">Waiting</p>
    <div class="c100 small p{{ ((waiting_count / total) * 100)|round }} center orange">
      <span>{{ waiting_count }}</span>
      <div class="slice"><div class="bar"></div><div class="fill"></div></div>
    </div>
  </div>
  <div class="col-md-4">
    <p class="text-center">Accepted</p>
    <div class="c100 small p{{ ((accepted_count / total) * 100)|round }} center">
      <span>{{ accepted_count }}</span>
      <div class="slice"><div class="bar"></div><div class="fill"></div></div>
    </div>
  </div>
  <div class="col-md-4">
    <p class="text-center">Picked</p>
    <div class="c100 small p{{ ((picked_count / total) * 100)|round }} center green">
      <span>{{ picked_count }}</span>
      <div class="slice"><div class="bar"></div><div class="fill"></div></div>
    </div>
  </div>
</div>

<hr>

<nav aria-label="...">
  <ul class="pager">
    {% set prev_page = (page > 1) ? page - 1 : 1 %}
    <li class="previous {% if page == 1 %}disabled{% endif %}">
      <a href="{{ path('admin_orders', {'p': prev_page}) }}"><span aria-hidden="true">&larr;</span> Précédent</a>
    </li>
    {% set next_page = (page < pages) ? page + 1 : page %}
    <li class="next {% if page == pages %}disabled{% endif %}">
      <a href="{{ path('admin_orders', {'p': next_page}) }}">Suivant <span aria-hidden="true">&rarr;</span></a>
    </li>
  </ul>
</nav>
<table class="table">
  <thead>
    <th>#</th>
    <th>Status</th>
    <th>Restaurant</th>
    <th>Price</th>
    <th>Created</th>
    <th>Delivery time</th>
    <th></th>
  </thead>
  <tbody>
  {% for order in orders %}
  <tr>
    <td><a href="{{ path('admin_order', {'id': order.id}) }}">#{{ order.id }}</a></td>
    <td><span class="label {{ status_label_class[order.status] }}">{{ order.status }}</span></td>
    <td>{{ order.restaurant.name }}</td>
    <td>{{ order.total }} €</td>
    <td>{{ order.createdAt|ago }}</td>
    <td>{{ order.deliveryTime }}</td>
    <td><a href="{{ path('order_cancel', {'id': order.id}) }}" class="btn btn-xs btn-danger pull-right">Cancel</a></td>
  </tr>
  {% endfor %}
  </tbody>
</table>
{% endblock %}

{% block scripts %}
{% endblock %}