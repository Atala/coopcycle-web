{% extends "AppBundle::base.html.twig" %}

{% block body %}
<div class="container">
  <div class="row">
    <div class="col-xs-12">
    {% include "AppBundle:Restaurant:pagination.html.twig" %}
    </div>
  </div>
  <div class="row">
    {% for restaurant in restaurants %}
    <div class="col-sm-6 col-md-4">

      <div class="thumbnail">
        <div class="caption">
          <h3>{{ restaurant.name|truncate(24, false, 'â€¦') }}</h3>
          <p>{{ restaurant.streetAddress }}</p>
          <p>
            <a href="{{ path('restaurant', {'id': restaurant.id, 'slug': restaurant.name|slugify}) }}" class="btn btn-primary" role="button">Voir</a>
          </p>
        </div>
      </div>

    </div>
    {% endfor %}
  </div>
  <div class="row">
    {% include "AppBundle:Restaurant:pagination.html.twig" %}
  </div>
</div>
{% endblock %}